<div class="row pt-5" style="background-color: rgb(146, 151, 125) ;">

  <div class="col-md-6 m-auto">
    <div class="container mt-5  pb-5 ">
      <h2 class="text-center">Create new account</h2>
      <form action="/vendor/vendor-signup" method="post">
        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name">

        </div>
        <div class="form-group">
          <label for="email">Email address:</label>
          <input type="text" class="form-control" name="email">

        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" class="form-control" name="password">
        </div>

        <a href="/vendor-login">Already have account ?</a>
        <button type="submit" class="btn btn-primary float-right ">Signup</button>
      </form>




    </div>


  </div>

</div>
</section>