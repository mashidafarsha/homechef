<section>
  <div class="col-md-8 m-auto">
    <div class="cantainer pt-5">
      <div class="row mt-4">
        <a href="/vendor/add-product" class="btn btn-success ml-auto ">Add product</a>

      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/vendor/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/vendor/delete-product/{{this._id}}" class="btn btn-danger">Delete</a>

      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
    </div>
   </div> 
</section>